{
  "name": "Enterprise Digital Twin",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:1-22-bookworm",
  "containerEnv": {
    "SKIP_DB": "true",
    "SKIP_NEO4J": "true"
  },
  "forwardPorts": [4000, 5173, 7474, 7687, 27017],
  "postCreateCommand": "bash scripts/codespaces-setup.sh",
  "postStartCommand": "bash scripts/codespaces-start.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint"
      ],
      "settings": {
        "editor.formatOnSave": true
      }
    }
  }
}
